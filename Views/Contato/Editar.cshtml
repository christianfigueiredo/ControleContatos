@model Contato
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">

  <h2 class="display-4">Editar Contato</h2>

</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

  <input type="hidden" asp-for="Id"/>

  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite seu nome">
    @Html.ValidationMessageFor(x=>x.Nome)
  </div>
  <div class="form-group">
    <label for="email">E-mail</label>
    <input type="text" asp-for="Email" class="form-control" placeholder="Digite o seu email">
    @Html.ValidationMessageFor(x=>x.Email)
  </div>
  <div class="form-group">
    <label for="celular">Celular</label>
    <input type="text" asp-for="Celular" class="form-control" placeholder="Digite seu celular">
    @Html.ValidationMessageFor(x=>x.Celular)
  </div>
  
  <button type="submit" class="btn btn-primary">Alterar</button>
  <a class="btn btn-primary" asp-controller="Contato" asp-action="Index" role="button" >Voltar</a>
</form>